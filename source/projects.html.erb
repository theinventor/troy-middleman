<h1>Some of our recent works</h1>

<% count = 1 %>
<% data.projects.each do |project| %>

    <div class="container">
      <h3>#<%= count %> - <%= project.name %> </h3>

      <div style="float:right;">
        <%= image_tag project.image, :width => 150 if project.image? %><br>
        <%= link_to project.link, project.link %>
      </div>
      <p><%= project.description.html_safe %></p>
      <p><i>Project Status: <%= project.status %></i></p>

      <hr>
    </div>

    <% count = count + 1 %>
<% end %>


